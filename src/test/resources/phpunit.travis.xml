<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.2/phpunit.xsd"
         bootstrap="test/bootstrap.phpunit.php"
         backupGlobals="false"
         verbose="true">

  <testsuites>

      <testsuite name="large">
          <directory suffix=".phpt">test/integration</directory>
      </testsuite>

    <testsuite name="small">
      <directory suffix="Test.php">test/php-unit</directory>
    </testsuite>

  </testsuites>

  <logging>
    <log type="coverage-clover" target="build/code-coverage/clover-coverage.xml"/>
  </logging>

  <filter>
    <whitelist processUncoveredFilesFromWhitelist="true">
      <directory suffix=".php">src</directory>
      <exclude>
       <file>src</file>
      </exclude>
    </whitelist>
  </filter>

</phpunit>

